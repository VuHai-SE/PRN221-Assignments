<Window x:Class="SalesWPFApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="191" Width="336"
        WindowStartupLocation="CenterScreen" Background="#FF4BDFE9">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="PRN221 - ASSIGNMENT 01" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5" Text="Email" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" FontSize="14"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5" Password="Password" Foreground="Gray" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus" FontSize="14"/>
            <Button Content="Login" Click="Login_Click" Width="100" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
