<Window x:Class="SalesWPFApp.EditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Product" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Edit Product" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="ProductNameTextBox" Margin="0,5"/>
            <TextBox x:Name="CategoryIdTextBox" Margin="0,5"/>
            <TextBox x:Name="WeightTextBox" Margin="0,5"/>
            <TextBox x:Name="UnitPriceTextBox" Margin="0,5"/>
            <TextBox x:Name="UnitsInStockTextBox" Margin="0,5"/>
            <Button Content="Save" Click="Save_Click" Width="100" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
