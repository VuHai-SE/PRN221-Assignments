@page
@model SalesRazorPageApp.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<h4>Are you sure you want to delete this product?</h4>
<div>
    <h4>@Model.Product.ProductName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Product Name
        </dt>
        <dd class="col-sm-10">
            @Model.Product.ProductName
        </dd>
        <dt class="col-sm-2">
            Category ID
        </dt>
        <dd class="col-sm-10">
            @Model.Product.CategoryId
        </dd>
        <dt class="col-sm-2">
            Weight
        </dt>
        <dd class="col-sm-10">
            @Model.Product.Weight
        </dd>
        <dt class="col-sm-2">
            Unit Price
        </dt>
        <dd class="col-sm-10">
            @Model.Product.UnitPrice
        </dd>
        <dt class="col-sm-2">
            Units In Stock
        </dt>
        <dd class="col-sm-10">
            @Model.Product.UnitsInStock
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Product.ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>

@if (Model.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @Model.ErrorMessage
    </div>
}
