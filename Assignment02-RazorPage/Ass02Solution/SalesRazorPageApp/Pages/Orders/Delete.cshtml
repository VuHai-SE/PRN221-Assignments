@page "{id:int}"
@model SalesRazorPageApp.Pages.Orders.DeleteModel

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this order?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Order ID
        </dt>
        <dd class="col-sm-10">
            @Model.Order.OrderId
        </dd>
        <dt class="col-sm-2">
            Company Name
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Member.CompanyName
        </dd>
        <dt class="col-sm-2">
            Order Date
        </dt>
        <dd class="col-sm-10">
            @Model.Order.OrderDate
        </dd>
        <dt class="col-sm-2">
            Required Date
        </dt>
        <dd class="col-sm-10">
            @Model.Order.RequiredDate
        </dd>
        <dt class="col-sm-2">
            Shipped Date
        </dt>
        <dd class="col-sm-10">
            @Model.Order.ShippedDate
        </dd>
        <dt class="col-sm-2">
            Freight
        </dt>
        <dd class="col-sm-10">
            @Model.Order.Freight
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Order.OrderId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Cancel</a>
    </form>
</div>
