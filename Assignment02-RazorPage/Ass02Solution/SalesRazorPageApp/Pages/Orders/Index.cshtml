@page
@model SalesRazorPageApp.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Orders";
}

<h1>Order List</h1>
<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>OrderId</th>
            <th>CompanyName</th>
            <th>Email</th>
            <th>Country</th>
            <th>OrderDate</th>
            <th>RequiredDate</th>
            <th>ShippedDate</th>
            <th>Freight</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Order)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CompanyName</td>
                <td>@order.Email</td>
                <td>@order.Country</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.RequiredDate?.ToString("yyyy-MM-dd")</td>
                <td>@order.ShippedDate?.ToString("yyyy-MM-dd")</td>
                <td>@order.Freight</td>
                <td>
                    <button type="button" class="btn btn-primary btn-sm" onclick="toggleDetails(@order.OrderId)">Details</button>
                </td>
            </tr>
            <tr id="details-@order.OrderId" style="display:none;">
                <td colspan="9">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Order Details</h5>
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>ProductId</th>
                                        <th>CategoryId</th>
                                        <th>ProductName</th>
                                        <th>UnitPrice</th>
                                        <th>Quantity</th>
                                        <th>Discount</th>
                                        <th>Sum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in order.OrderDetails)
                                    {
                                        <tr>
                                            <td>@detail.ProductId</td>
                                            <td>@detail.CategoryId</td>
                                            <td>@detail.ProductName</td>
                                            <td>@detail.UnitPrice</td>
                                            <td>@detail.Quantity</td>
                                            <td>@detail.Discount</td>
                                            <td>@detail.Sum</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function toggleDetails(orderId) {
            var detailsRow = document.getElementById('details-' + orderId);
            if (detailsRow.style.display === 'none') {
                detailsRow.style.display = '';
            } else {
                detailsRow.style.display = 'none';
            }
        }
    </script>
}
